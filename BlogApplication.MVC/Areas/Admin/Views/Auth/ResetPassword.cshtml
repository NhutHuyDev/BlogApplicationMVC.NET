@model BlogApplication.MVC.ViewModels.ResetPasswordVM

@{
    Layout = "_Layout";
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-2 text-gray-800">Reset Password</h1>
    <a class="text-primary" role="button" asp-action="Index" asp-controller="Dashboard">Back To User List</a>
</div>

<div class="mb-4 row flex justify-content-center"
     style="background-color: transparent;">
    <div class="col-12 col-sm-8 col-lg-4 card shadow p-4">
        <form class="user" method="post" asp-action="ResetPassword">
            <input readonly asp-for="Id" type="hidden">
            <div class="form-group">
                <input readonly asp-for="UserName" type="text" class="form-control form-control-user"
                       placeholder="UserName">
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewPassword" type="text" class="form-control form-control-user"
                       placeholder="NewPassword">
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="text" class="form-control form-control-user"
                       placeholder="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Create User" />
        </form>
    </div>
</div>
