@model BlogApplication.MVC.ViewModels.CreateUserVM

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create User";
}

<div class="d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-2 text-gray-800">Create New User</h1>
    <a class="text-primary" role="button" asp-action="Index" asp-controller="Dashboard">Back To User List</a>
</div>

<div class="mb-4 row flex justify-content-center"
    style="background-color: transparent;"
>
    <div class="col-12 col-sm-8 col-lg-4 card shadow p-4">
        <form class="user" method="post" asp-action="CreateUser">
            <div class="form-group">
                <input asp-for="FirstName" type="text" class="form-control form-control-user"
                       placeholder="FirstName">
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" type="text" class="form-control form-control-user"
                       placeholder="LastName">
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" type="text" class="form-control form-control-user"
                       placeholder="Email">
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserName" type="text" class="form-control form-control-user"
                       placeholder="Username">
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="text" class="form-control form-control-user"
                       placeholder="Password">
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="text" class="form-control form-control-user"
                       placeholder="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox small">
                    <input asp-for="IsAdmin" type="checkbox" class="custom-control-input" id="customCheck">
                    <label class="custom-control-label" for="customCheck">
                        Is 
                        Admin
                    </label>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Create User" />
        </form>
    </div>
</div>


